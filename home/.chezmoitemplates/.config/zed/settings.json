{
  "edit_predictions": {
    "mode": "eager"
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
  },
  "auto_indent_on_paste": true,
  "base_keymap": "VSCode",
  "buffer_font_family": "Droid Sans Mono",
  "buffer_font_size": 13,
  "cursor_blink": true,
  "debugger": {
    "dock": "bottom"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "file_types": {
    "hlsl": ["*.usf", "*.ush"],
    "yaml": ["*.yaml", "*.yml"]
  },
  "format_on_save": "off",
  "hard_tabs": false,
  "icon_theme": {
    "dark": "Zed (Default)",
    "light": "Zed (Default)",
    "mode": "dark"
  },
  "languages": {
    "JSON": {
      "tab_size": 2
    },
    "JSONC": {
      "tab_size": 2
    }
  },
  "lsp_document_colors": "background",
  "minimap": {
    "max_width_columns": 60
  },
  "remove_trailing_whitespace_on_save": false,
  "search": {
    "include_ignored": false
  },
  "soft_wrap": "editor_width",
  "terminal": {
    "blinking": "on",
    "cursor_shape": "bar",
    "font_family": "DejaVuSansM Nerd Font Mono",
    "font_size": 12,
    "toolbar": {
      "breadcrumbs": true
    }
  },
  "theme": {
    "dark": "Hemul's Tokyo Night Storm",
    "light": "One Light",
    "mode": "dark"
  },
  "ui_font_family": ".ZedSans",
  "ui_font_size": 15,
  "vim_mode": true
}
