{{- /* chezmoi:modify-template */ -}}
{{- $baseZedSettings := includeTemplate ".config/zed/settings.json" -}}
{{- $mergeJsonOperator := printf ". * %s" $baseZedSettings -}}
{{- if not (eq .chezmoi.stdin "") -}}
    {{- fromJsonc .chezmoi.stdin | jq $mergeJsonOperator | first | toPrettyJson -}}
{{- else -}}
    {{- $baseZedSettings -}}
{{- end }}
